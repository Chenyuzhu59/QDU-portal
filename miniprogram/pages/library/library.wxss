 page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: "Arial";
  font-size: 40rpx
}
.showornot{
  margin-top: 120rpx;
  width: 100%;
  height: 120rpx;
  font-size: 45rpx;
  text-align: center
}
    .search{  

      width: 80%;  

    }  

    .search_arr {  

      border: 2px solid #d0d0d0;  

      border-radius: 10rpx;  

      margin-left: 20rpx;  
      
      background-color: white

    }  

    .search_arr input{  

      margin-left: 20rpx;  

      height: 60rpx;  

      border-radius: 5px;  

    }  


    .searchType {  

      margin-left: 15rpx;  

